{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "every weekend"
  ],
  "regexManagers": [
    {
      "fileMatch": ["(^|\\/)Makefile$"],
      "matchStrings": ["namely/protoc-all:(?<currentValue>.*?)\\s"],
      "datasourceTemplate": "docker",
      "depNameTemplate": "namely/protoc-all"
    }
  ]
}
